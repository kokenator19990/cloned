{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API: Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "exec",
        "nest",
        "start",
        "--debug",
        "--watch"
      ],
      "cwd": "${workspaceFolder}/services/api",
      "console": "integratedTerminal",
      "restart": true,
      "envFile": "${workspaceFolder}/services/api/.env",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/services/api/dist/**/*.js"
      ]
    },
    {
      "name": "Web: Debug (Next.js)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "exec",
        "next",
        "dev",
        "--port",
        "3000"
      ],
      "cwd": "${workspaceFolder}/apps/web",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "API: Debug Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "test",
        "--",
        "--runInBand",
        "--detectOpenHandles"
      ],
      "cwd": "${workspaceFolder}/services/api",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/services/api/.env",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Full Stack",
      "configurations": [
        "API: Debug",
        "Web: Debug (Next.js)"
      ]
    }
  ]
}